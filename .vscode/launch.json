{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "release-restir",
			"type": "cppvsdbg",
			"request": "launch",
			"preLaunchTask": "rust: cargo build release",
			"program": "${workspaceFolder}/target/release/restir.exe",
			"args": [
				"./assets/Sponza/Sponza.gltf",
				"--profiler",
				"--vsync",
				"--camera-preset",
				"2.0,4.8,0.25,-85.0,1.0,6.0,-0.35,5.0,-80.0,-16.0,8.5,0.5,0.15,-80.0,30.0",
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"console": "integratedTerminal"
		},
		{
			"name": "dev-restir",
			"type": "cppvsdbg",
			"request": "launch",
			"preLaunchTask": "rust: cargo build nightly release",
			"program": "${workspaceFolder}/target/release/restir.exe",
			"args": [
				//"./assets/Sponza/Sponza.gltf",
				//"./assets/pica_pica_-_mini_diorama_01/scene.gltf",
				"./assets/SunTemple_glTF/SunTemple.gltf",
				"--profiler",
				"--camera-preset",
				"2.0,4.8,0.25,-85.0,1.0,6.0,-0.35,5.0,-80.0,-16.0,8.5,0.5,0.15,-80.0,30.0",
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [
				{
					"name": "VIOLET_BREAKPOINT",
					"value": "1"
				},
				{
					"name": "VIOLET_VALIDATION_LAYER",
					"value": "1"
				},
			],
			"console": "integratedTerminal"
		},
		{
			"name": "debug-restir",
			"type": "cppvsdbg",
			"request": "launch",
			"preLaunchTask": "rust: cargo build nightly",
			"program": "${workspaceFolder}/target/debug/restir.exe",
			"args": [
				//"./assets/Sponza/Sponza.gltf",
				"./assets/pica_pica_-_mini_diorama_01/scene.gltf",
				"--profiler",
				"--camera-preset",
				"1.8,3.5,2.0,-75.0,0.0,6.0,-0.35,5.0,-80.0,-16.0,8.5,0.5,0.15,-80.0,30.0",
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [
				{
					"name": "VIOLET_BREAKPOINT",
					"value": "1"
				},
				{
					"name": "VIOLET_VALIDATION_LAYER",
					"value": "1"
				},
			],
			"console": "integratedTerminal"
		},
	]
}