	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug-Helmet",
			"type": "cppvsdbg",
			"request": "launch",
			"preLaunchTask": "rust: cargo build nightly",
			"program": "${workspaceFolder}/target/debug/violet.exe",
			"args": [
				"./assets/DamagedHelmet/DamagedHelmet.gltf",
				"--renderdoc"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"console": "integratedTerminal"
		},
		{
			"name": "Debug-Sponza",
			"type": "cppvsdbg",
			"request": "launch",
			"preLaunchTask": "rust: cargo build nightly",
			"program": "${workspaceFolder}/target/debug/violet.exe",
			"args": [
				"./assets/Sponza/Sponza.gltf",
				"--renderdoc"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"console": "integratedTerminal"
		}
	]
}